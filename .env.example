# ============================================
# VulnScan ASM — Environment Variables
# ============================================
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control

# ========================
# General
# ========================
NODE_ENV=development
APP_NAME=VulnScan ASM
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# ========================
# API Server
# ========================
API_PORT=4000
API_HOST=0.0.0.0

# JWT
JWT_ACCESS_SECRET=your-access-secret-change-this
JWT_REFRESH_SECRET=your-refresh-secret-change-this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ========================
# Database (PostgreSQL)
# ========================
DATABASE_URL=postgresql://vulnscan:vulnscan_password@localhost:5432/vulnscan_db?schema=public
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vulnscan_db
DB_USER=vulnscan
DB_PASSWORD=vulnscan_password

# ========================
# Redis
# ========================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================
# Object Storage (S3/MinIO)
# ========================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=vulnscan-reports
S3_REGION=us-east-1

# ========================
# Email (Resend / SMTP)
# ========================
# For development: use MailHog (localhost:1025)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@vulnscan.io

# For production: use Resend
# RESEND_API_KEY=re_xxxxxxxxxxxxx

# ========================
# Scanner (Python/Celery)
# ========================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
SCANNER_MAX_CONCURRENT=3
SCANNER_TIMEOUT=3600
SCANNER_RATE_LIMIT=10

# ========================
# External APIs (Optional)
# ========================
# SHODAN_API_KEY=
# SECURITYTRAILS_API_KEY=
# NVD_API_KEY=

# ========================
# Stripe (Billing — Phase 2+)
# ========================
# STRIPE_SECRET_KEY=sk_test_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxx

